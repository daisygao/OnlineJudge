/**
 * Definition for binary tree
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) { val = x; }
 * }
 */
public class Solution {
    public ArrayList<ArrayList<Integer>> pathSum(TreeNode root, int sum) {
        // Start typing your Java solution below
        // DO NOT write main() function
        ArrayList<ArrayList<Integer>> result = new ArrayList<ArrayList<Integer>>();
        ArrayList<Integer> list = new ArrayList<Integer>();
        pathSumHelper(root, sum, result, list);
        return result;
    }
    private void pathSumHelper(TreeNode root, int sum, ArrayList<ArrayList<Integer>> result, ArrayList<Integer> list) {
        if (root == null) return;
        sum -= root.val;
        list.add(root.val);
        ArrayList<Integer> leftList = new ArrayList<Integer>(list), rightList = new ArrayList<Integer>(list);
        if (root.left == null && root.right == null && 0 == sum) {
            result.add(list);
            return;
        }
        pathSumHelper(root.left, sum, result, leftList);
        pathSumHelper(root.right, sum, result, rightList);
        
    }
}